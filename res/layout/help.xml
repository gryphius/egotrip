<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/road"
    android:orientation="vertical" >
    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="fill_parent"
          android:background="#55000000"
        android:layout_height="fill_parent" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dip" >
            <TextView
                android:id="@+id/help_page_intro"
                android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:padding="2dip"
                android:text="@string/help_page_intro" />
            <TableLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"                
                android:layout_height="wrap_content"                
                android:stretchColumns="1" >
                <TableRow>
                    <Button
                        android:layout_width="0dip"
                        android:layout_weight="0.3"
                        android:id="@+id/help_button1"
                        android:layout_column="1"
                        
                        android:onClick="onClickHelp"
                        android:padding="3dip"
                        android:text="@string/help_title_section1" />
                    <TextView
                         android:layout_width="0dip"
                        android:layout_weight="0.7"
                        android:id="@+id/help_summary_text1"
                        android:padding="8dip"         
                        android:textColor="#FFFFFF"               
                        android:layout_height="wrap_content"
                        android:text="@string/help_text_section1" />
                </TableRow>
                <TableRow>
                    <Button
                        android:layout_width="0dip"
                        android:layout_weight="0.3"
                        android:id="@+id/help_button2"
                        android:layout_column="1"
                        android:onClick="onClickHelp"
                        android:padding="3dip"
                        
                        android:text="@string/help_title_section2" />
                    <TextView
                         android:layout_width="0dip"
                        android:layout_weight="0.7"
                         android:id="@+id/help_summary_text2"
                        android:gravity="left"
                        android:textColor="#FFFFFF"
                        android:padding="8dip"
                        android:text="@string/help_text_section2" />
                </TableRow>
                <TableRow>
                    <Button
                        android:layout_width="0dip"
                        android:layout_weight="0.3"
                        android:id="@+id/help_button3"
                        android:layout_column="1"
                        android:onClick="onClickHelp"
                        android:layout_gravity="left"
                        android:padding="3dip"
                        
                        android:text="@string/help_title_section3" />
                    <TextView
                         android:layout_width="0dip"
                        android:layout_weight="0.7"
                         android:id="@+id/help_summary_text3"
                        android:gravity="left"
                        android:padding="8dip"
                        android:textColor="#FFFFFF"
                        android:text="@string/help_text_section3" />
                </TableRow>
                <TableRow>
                    <Button
                        android:id="@+id/help_button4"
                        android:layout_column="1"
                        android:layout_width="0dip"
                        android:layout_weight="0.3"
                        
                        android:onClick="onClickHelp"
                       
                        android:padding="3dip"
                        android:text="@string/help_title_section4" />
                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="0.7"
                         android:id="@+id/help_summary_text4"
                        android:gravity="left"
                        android:padding="8dip"
                        android:textColor="#FFFFFF"
                        android:text="@string/help_text_section4" />
                </TableRow>
                
                <!-- disabled until this feature makes more sense (currently just copies db to sdcard) 
                <TableRow>
                    <Button
                        android:id="@+id/help_bugreport"
                        android:layout_column="1"
                        android:layout_width="0dip"
                        android:layout_weight="0.3"
                        
                        android:onClick="onClickBugReport"
                       
                        android:padding="3dip"
                        android:text="Bug Report" />
                    <TextView
                        android:layout_width="0dip"
                        android:layout_weight="0.7"
                         android:id="@+id/help_bug_report_text"
                        android:gravity="left"
                        android:padding="8dip"
                        android:textColor="#FFFFFF"
                        android:text="Export debug info/Make bug report" />
                </TableRow>
                -->
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>